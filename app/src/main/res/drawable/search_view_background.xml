<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Viền đậm -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#3F2305" />
            <corners android:radius="30dp"/>
            <padding android:left="2dp" android:right="2dp"/>
            <padding android:top="2dp" android:bottom="2dp"/>

        </shape>
    </item>

    <!-- Nền trong suốt -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="@color/backGround" /> <!-- Màu trong suốt -->
        </shape>
    </item>
</layer-list>