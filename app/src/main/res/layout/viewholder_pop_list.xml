<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170sp"
    android:background="@drawable/grey_background"
    android:elevation="3dp"
    android:layout_margin="8dp"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="170dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="55dp"
        android:layout_height="22dp"
        android:background="@drawable/white_background"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/white_background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingLeft="10sp"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/type_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fried"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        app:layout_constraintStart_toStartOf="@+id/titleTxt"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt"
        />


    <TextView
        android:id="@+id/reveiwTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="12"
        android:layout_margin="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        />

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:srcCompat="@drawable/review" />
    <TextView
        android:id="@+id/feeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123.000 VND"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:paddingLeft="10sp"
        android:textColor="@color/hilight_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"  />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addtocart"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="10sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_add_to_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerInParent="true"
        android:textColor="@color/grey"
        android:text="+"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.21"
        app:layout_constraintHeight_percent="0.14"
        />
</androidx.constraintlayout.widget.ConstraintLayout>