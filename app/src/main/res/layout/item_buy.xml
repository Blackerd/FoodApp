<!-- item_product.xml -->

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg_item_home"
    >

    <!-- Hình ảnh sản phẩm -->
    <ImageView

        android:id="@+id/imageProductBag"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"

        />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Tên sản phẩm -->
        <TextView
            android:textColor="@color/hilight_text"

            android:id="@+id/textProductNameBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Giá sản phẩm -->
        <TextView
            android:textColor="@color/hilight_text"

            android:id="@+id/textProductPriceBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá sản phẩm"
            android:textSize="14sp" />

        <!-- Loại sản phẩm -->
        <TextView
            android:textColor="@color/hilight_text"
            android:id="@+id/textProductTypeBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sản phẩm"
            android:textSize="14sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:backgroundTint="@color/backGround"
        android:id="@+id/increment"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textColor="@color/hilight_text"

        android:text="+"/>
    <TextView
        android:id="@+id/numberBag"
        android:layout_gravity="center_horizontal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/hilight_text"
        android:text="0"

    />
    <Button
        android:id="@+id/decrement"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/backGround"
        android:textColor="@color/hilight_text"
        android:text="-"/>
</LinearLayout>

</LinearLayout>
